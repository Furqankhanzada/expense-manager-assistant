# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Default LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # openai, gemini, grok, ollama
DEFAULT_LLM_MODEL=gpt-4o-mini

# LLM API Keys (users can also configure their own)
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
XAI_API_KEY=your_xai_api_key

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://ollama:11434

# Encryption key for storing user API keys (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_fernet_encryption_key

# Whisper Configuration
WHISPER_MODEL=base  # tiny, base, small, medium, large-v3

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
