# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
# For docker-compose: just set POSTGRES_PASSWORD, DATABASE_URL is auto-configured
POSTGRES_PASSWORD=your_secure_password_here

# For external PostgreSQL (optional, overrides auto-config):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Default LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # openai, gemini, grok, ollama
DEFAULT_LLM_MODEL=gpt-4o-mini

# LLM API Keys (users can also configure their own)
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
XAI_API_KEY=your_xai_api_key

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://ollama:11434

# Encryption key for storing user API keys
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key

# Whisper Configuration
WHISPER_MODEL=base  # tiny, base, small, medium, large-v3

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
